# Socket.IO Configuration Environment Variables
# Add these to your .env file or docker environment

# Socket.IO allowed origins (comma-separated list)
# Production example:
# SOCKET_ALLOWED_ORIGINS=https://stardust.id.vn,https://www.stardust.id.vn,https://app.stardust.id.vn

# Development example:
SOCKET_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001,http://127.0.0.1:3000,http://127.0.0.1:3001,http://frontend:3000,https://stardust.id.vn,https://www.stardust.id.vn

# JWT Secret for Socket.IO authentication
JWT_SECRET=your_jwt_secret_key_here

# Socket.IO connection settings
SOCKET_PING_TIMEOUT=60000
SOCKET_PING_INTERVAL=25000

# Enable/disable Socket.IO authentication
SOCKET_AUTH_REQUIRED=true

# Socket.IO namespace (optional)
SOCKET_NAMESPACE=/

# Enable Socket.IO debug logs
SOCKET_DEBUG=false
